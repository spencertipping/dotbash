# Layer configuration for .bash
dotbash use tmux                # always load this one first

dotbash use path-bin            # mkdirs, adds ~/bin to the path
# dotbash use path-here         # adds ./ to the path (dangerous)

dotbash use cd-aliases
dotbash use git-aliases
dotbash use ls-aliases

dotbash use prompt

dotbash use docker
dotbash use history
dotbash use lambda
dotbash use nfu
dotbash use ni
dotbash use lazytest
dotbash use tasks

dotbash use apply

# dotbash use cd all            # enables everything
dotbash use cd ssh s3fs aufs archive dev loop encfs nfs history missing-mkdir

